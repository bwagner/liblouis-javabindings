<?xml version="1.0" encoding="UTF-8"?>
<project name="Louis" default="default" basedir=".">

	<property name="build.dir" value="bin" />
	<property name="app.jar" value="louis.jar" />
	<property name="louisFat.jar" value="louisFat.jar" />
	<property name="src.dir" value="src" />
	<property name="lib.dir" value="lib" />
	<path id="classpath.path">
		<pathelement location="${build.dir}" />
		<fileset dir="${lib.dir}">
			<include name="*.jar" />
		</fileset>
	</path>

	<target name="default" depends="jar" />

	<target name="jar" depends="compile">
		<jar jarfile="${app.jar}" basedir="${build.dir}" includes="**/*.class" excludes="**/*Test.class" />
	</target>

	<target name="fatjar" depends="jar">
		<property name="tmp" location="tmp"/>
		<delete dir="${tmp}"/>
		<mkdir dir="${tmp}"/>
		<unjar dest="${tmp}">
			<fileset dir="${lib.dir}"/>
		</unjar>
		<unjar src="${app.jar}" dest="${tmp}"/>
		<jar jarfile="${louisFat.jar}" basedir="${tmp}" >
		</jar>
		<delete dir="${tmp}"/>
	</target>

	<target name="compile">
		<mkdir dir="${build.dir}"/>
		<javac srcdir="${src.dir}" destdir="${build.dir}" deprecation="on" debug="on">
			<classpath>
				<path refid="classpath.path" />
			</classpath>
		</javac>
	</target>

</project>
